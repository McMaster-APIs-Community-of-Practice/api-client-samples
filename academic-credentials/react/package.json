{
  "name": "mcmaster-api-client-react-sample",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/McMaster-APIs-Community-of-Practice/api-client-samples.git"
  },
  "version": "0.1.0",
  "description": "A React single-page application using MSAL React to call a McMaster API using Azure Active Directory identity provider",
  "dependencies": {
    "@azure/msal-browser": "^2.30.0",
    "@azure/msal-react": "^1.0.0-beta.0",
    "bootstrap": "^5.2.2",
    "jquery": "^3.6.1",
    "node-sass": "^7.0.3",
    "react": "^18.2.0",
    "react-bootstrap": "^2.5.0",
    "react-dom": "^18.2.0",
    "react-popper": "^2.3.0",
    "react-router-dom": "^6.4.2",
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint **/*.tsx"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "comments": 200,
          "ignoreTrailingComments": true
        }
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-router-dom": "^5.3.3",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "typescript": "^4.2.4"
  }
}
